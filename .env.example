# Environment Variables for Apple Automat Pipeline
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# ============================================================================
# Project Settings
# ============================================================================

# Path to your Xcode project directory
PROJECT_PATH="/path/to/your/project"

# Xcode scheme name
SCHEME_NAME="YourAppScheme"

# Xcode workspace name (if applicable)
WORKSPACE_NAME="YourApp.xcworkspace"

# Xcode project name (if not using workspace)
PROJECT_NAME="YourApp.xcodeproj"

# ============================================================================
# Build Settings
# ============================================================================

# Build configuration (Debug, Release, etc.)
BUILD_CONFIGURATION="Debug"

# Derived data path
DERIVED_DATA_PATH="./DerivedData"

# Export path for archives
EXPORT_PATH="./Build"

# ============================================================================
# Code Signing (iOS/macOS)
# ============================================================================

# Apple Developer Team ID
DEVELOPMENT_TEAM="ABC123DEF4"

# Code signing identity
CODE_SIGN_IDENTITY="Apple Development"

# Provisioning profile name
PROVISIONING_PROFILE="YourApp Development Profile"

# Provisioning profile UUID (optional)
PROVISIONING_PROFILE_UUID=""

# Bundle identifier
BUNDLE_IDENTIFIER="com.yourcompany.yourapp"

# ============================================================================
# Testing Settings
# ============================================================================

# Test plan name (optional)
TEST_PLAN=""

# Code coverage enabled (true/false)
CODE_COVERAGE_ENABLED="true"

# Parallel testing enabled (true/false)
PARALLEL_TESTING_ENABLED="true"

# ============================================================================
# Notification Settings
# ============================================================================

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Email for notifications
NOTIFICATION_EMAIL="your-email@example.com"

# Slack channel for notifications
SLACK_CHANNEL="#devops"

# ============================================================================
# CI/CD Settings (for GitHub Actions)
# ============================================================================

# GitHub repository (format: owner/repo)
GITHUB_REPOSITORY="your-username/your-repo"

# App Store Connect API Key ID
APP_STORE_CONNECT_KEY_ID=""

# App Store Connect Issuer ID
APP_STORE_CONNECT_ISSUER_ID=""

# App Store Connect API Key (base64 encoded)
APP_STORE_CONNECT_API_KEY=""

# ============================================================================
# Advanced Settings
# ============================================================================

# Use xcpretty for formatted output (true/false)
USE_XCPRETTY="true"

# Verbose output (true/false)
VERBOSE="false"

# Build timeout in minutes
BUILD_TIMEOUT="30"

# Test timeout in minutes
TEST_TIMEOUT="20"

# ============================================================================
# Optional: Simulator Settings
# ============================================================================

# iOS Simulator name
IOS_SIMULATOR_NAME="iPhone 15"

# iOS Simulator OS version
IOS_SIMULATOR_OS="latest"

# macOS destination
MACOS_DESTINATION="platform=macOS"
